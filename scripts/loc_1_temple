// 寺庙

?loc = temple

  aac()   

  // 行走与战斗
  ?foe.distance > 25
    loc6_run()
  :?stackPotion
    ?foe = phase1
      loc6_boss_1_stackPotion()
    :?foe = boss
      loc6_boss_0_stackPotion()
    :
      loc6_attack_stackPotion() 
  :
    ?foe = phase1
      selectEquipT(ice_heavy_cross)
    :?foe = boss
      selectEquipT(ice_heavy_cross)
    :
      selectEquipT(ice_heavy_cross)

  // 开局操作
  loc6_main()

  // 更换装备
  changeEquip()