// 寺庙

?loc = temple

  aac()   

  // 行走与战斗
  ?foe.distance > 25
    loc6_run()
  :?stackPotion
    ?foe = phase1
      loc6_boss_1_stackPotion()
    :?foe = boss
      loc6_boss_0_stackPotion()
    :
      loc6_attack_stackPotion() 
  :
    ?foe = phase1
      ?foe.distance <= 10
        ?BladeSkill()
          return
        ?bardicheSkill()
          return
        ?maskSkill()
          return

        ?hp ! maxhp
          selectEquip(dL1, dL2)
        :
          selectEquip(ice1, ice2)
        ?needPoison()
          selectEquip(dP, dI)
        :?needIce()
          selectEquip(dP, dI)
      :
        bashSkill()

    :?foe = boss
      ?foe.distance <= 10
        ?BladeSkill()
          return
        ?bardicheSkill()
          return
        ?maskSkill()
          return

        ?hp ! maxhp
          selectEquip(dL1, dL2)
        :
          selectEquip(ice1, ice2)
        ?needPoison()
          selectEquip(dP, dI)
        :?needIce()
          selectEquip(dP, dI)
      :
        bashSkill()
    :
      selectEquipT(ice_heavy_cross)

  // 开局操作
  loc1_main()

  // 更换装备
  changeEquip()